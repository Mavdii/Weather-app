{
  "expo": {
    "name": "Climapro",
    "slug": "climapro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "climapro",
    "userInterfaceStyle": "automatic",
    "description": "A premium weather application with dynamic themes, AI-powered insights, and beautiful visualizations",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.umar.climapro",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1A73E8"
      },
      "package": "com.umar.climapro",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Climapro to use your location to provide accurate local weather forecasts."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A73E8"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "baseUrl": "/2b44e355-fefd-4b2a-b5ea-379a58cffad7/dev-preview/"
    },
    "extra": {
      "eas": {
        "projectId": "climapro-weather-app"
      }
    }
  }
}
